{
  "name": "@teasenshi/fission",
  "version": "2.1.1",
  "description": "State management library for ES5+ environments designed for ease of use.",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "types": "dist/main/index.d.ts",
  "repository": "https://github.com/amaya-loves-tea/fission.git",
  "author": "amaya-loves-tea",
  "license": "MIT",
  "files": [
    "/dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "style": "run-s style:*",
    "style:format": "prettier --write \"src/**/*.ts\"",
    "style:lint": "eslint src --ext .js,.ts --fix",
    "commit": "git-cz",
    "clean": "rimraf dist && rimraf coverage && rimraf docs",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --config jestconfig.json --watch",
    "cov": "run-s test && run-s cov:open",
    "cov:open": "open-cli coverage/lcov-report/index.html",
    "cov:publish": "codecov",
    "doc": "typedoc src && run-s doc:open",
    "doc:open": "open-cli docs/index.html",
    "doc:publish": "gh-pages -t -m \"chore: update docs\" -d docs -r https://$GH_TOKEN@github.com/amaya-loves-tea/fission.git",
    "release": "semantic-release"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^5.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.24",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typedoc": "^0.15.0",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.6.3"
  }
}
